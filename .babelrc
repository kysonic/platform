{
  "presets": [
    "module:metro-react-native-babel-preset"
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "@components": "./src/components",
          "@types": "./src/types",
          "@layouts": "./src/components/layouts",
          "@themes": "./src/themes",
          "@navigator": "./src/navigator",
          "@screens": "./src/screens",
          "@stores": "./src/stores",
          "@utils": "./src/utils",
          "@services": "./src/services",
          "@constants": "./src/constants",
          "@assets": "./assets",
          "@icons": "./src/icons",
          "@config": "./src/config"
        }
      }
    ]
  ]
}
