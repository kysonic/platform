// @flow
import * as React from 'react';
import {View} from 'react-native';

type ViewProps = React.ElementProps<typeof View>;
type ViewStyleProp = $PropertyType<ViewProps, 'style'>;

export type StyleSheetType = { [string]: $ReadOnly<ViewStyleProp >};

export type ModeType = "login" | "register";

export type ReactNodeWithoutStrings = React.ChildrenArray<
    | void
    | null
    | boolean
    | React.Element<any>
    >;

export type UserType = {
    id: string, // Firebase doc id
    authId: Array<string>, // Firebase auth id
    email: string | null,
    name?: string | null,
    startedCourses?: Array<string>,
    completedCourses?: Array<string>,
    exoIndex?: number,
    birthDate?: string,
    avatar?: string | null,
    phone?: string | null,
}


